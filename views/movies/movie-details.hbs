<h2>Movie Details</h2>
<h3>{{movie.title}}</h3>
<p>{{movie.genre}}</p>
<p>{{movie.plot}}</p>
<h4>Cast:</h4>
{{#each movie.cast}}
  <p>Celebrity:
    {{this.name}}, occupation:
    {{this.occupation}}, and catch phrase:
    {{this.catchPhrase}}</p>
{{/each}}

<form action="/movies/{{movie._id}}/delete" method="post">
  <button type="submit">Delete Movie</button>
</form>
<a href="/movies/{{movie._id}}/edit">Edit Movie</a>